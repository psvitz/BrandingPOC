<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrandingPOC</title>
    <base href="~/" />

    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/site.css" asp-append-version="true" />



    <link rel="stylesheet" href='@string.Format("/CustomCss/Index?themeId={0}", @Context.Request.Query["themeId"].ToString() != "" ? @Context.Request.Query["themeId"].ToString():"0")' asp-append-version="true" />
    <link rel="stylesheet" href="~/branding-base.css" asp-append-version="true" />
</head>
<body>
    @RenderBody()

    @RenderSection("scripts", required: false)

    <script src="/css.poly.js"></script>
</body>
</html>
